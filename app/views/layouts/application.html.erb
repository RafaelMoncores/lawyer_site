            <% end %>
          </div>

          <!-- Desktop Navigation -->
          <div class="hidden lg:flex items-center space-x-8">
            <%= link_to "Home", root_path, class: "text-gray-700 hover:text-green-600 font-medium transition-colors" %>
            <%= link_to "Sobre o Escritório", sobre_path, class: "text-gray-700 hover:text-green-600 font-medium transition-colors" %>
            <%= link_to "Nosso CEO", ceo_path, class: "text-gray-700 hover:text-green-600 font-medium transition-colors" %>
            <%= link_to "Advogados Associados", associados_path, class: "text-gray-700 hover:text-green-600 font-medium transition-colors" %>
            <%= link_to "Áreas de Atuação", areas_de_atuacao_path, class: "text-gray-700 hover:text-green-600 font-medium transition-colors" %>
            <%= link_to "Artigos", artigos_path, class: "text-gray-700 hover:text-green-600 font-medium transition-colors" %>
            <%= link_to "Contato", contato_path, class: "text-gray-700 hover:text-green-600 font-medium transition-colors" %>
            
            <!-- WhatsApp Button -->
            <a href="https://wa.me/5541991461841" target="_blank" class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
              Fale pelo WhatsApp
            </a>
          </div>

          <!-- Mobile menu button -->
          <div class="lg:hidden">
            <button type="button" id="mobile-menu-button" class="bg-white p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-green-500">
              <span class="sr-only">Abrir menu</span>
              <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
